

@model IEnumerable<POlimpicos.Models.Estado>
@{
    ViewBag.Title = "Estados";
}

<div class="d-flex justify-content-between align-items-end mb-3">
    <h1 class="page-title">Estados</h1>
    <div class="page-subtitle">Total: <strong>@(Model?.Count() ?? 0)</strong></div>
</div>

<div class="table-wrap card-soft">
    <table class="table table-hover align-middle mb-0">
        <thead>
            <tr>
                <th style="width:80px;">Código</th>
                <th>Nome</th>
              
            </tr>
        </thead>
        <tbody>
            @if (Model == null || !Model.Any())
            {
                <tr><td colspan="5" class="text-center text-muted py-4">Nenhum atleta cadastrado.</td></tr>
            }
            else
            {
                foreach (var a in Model)
                {
                    <tr>
                        <td>@a.codEstado</td>
                        <td>
                            <a asp-controller="Estados" asp-action="Atletas" asp-route-id="@a.codEstado">@a.nomeEstado</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<a href="/Estados/Cadastrar">
    Cadastrar novo estado
</a>
